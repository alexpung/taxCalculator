<TaxYearWidget>:
    orientation: "vertical"

    MDLabel:
        text: "Tax calculation period"
    MDBoxLayout:
        spacing: 10
        MDIconButton:
            icon: "arrow-left-bold-outline"
            on_release: root.on_press_left()
        MDLabel:
            size: self.texture_size
            text: root.display
        MDIconButton:
            icon: "arrow-right-bold-outline"
            on_release: root.on_press_right()
        MDRaisedButton:
            text: "Custom Date"
            on_release: root.show_date_picker()

<ImportExportWidget>:
    orientation: "vertical"
    MDLabel:
        text: "Import:"
    MDBoxLayout:
        spacing: 10
        MDRaisedButton:
            text: "Import file"
            on_release: app.select_file()
        MDRaisedButton:
            text: "Import folder"
            on_release: app.select_directory()
    MDLabel:
        text: "Export:"
    MDBoxLayout:
        spacing: 10
        MDLabel:
            text: "File format"
        MDDropDownItem:
            id: export_format
            text: root.selected_format.value
            on_release: root.dropdown.open()
        MDRaisedButton:
            text: 'Export'
            on_release: toast(export_format.current_item)


<ItemDrawer>:
    IconLeftWidget:
        id: icon
        icon: root.icon
        text_color: root.text_color


<ContentNavigationDrawer@MDBoxLayout>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None

    MDLabel:
        text: "UK investment tax calculator"
        font_style: "Button"
        adaptive_height: True

    MDLabel:
        text: "https://github.com/alexpung/taxCalculator"
        font_style: "Caption"
        adaptive_height: True

    ScrollView:

        MDList:

            ItemDrawer:
                icon: "chart-line"
                text: "Capital gain"
            ItemDrawer:
                icon: "cash-multiple"
                text: "Dividend and interest"
            ItemDrawer:
                icon: "cog"
                text: "Settings"
            ItemDrawer:
                icon: "information-outline"
                text: "Licenses and About"





MDNavigationLayout:

    ScreenManager:

        MDScreen:

            MDBoxLayout:
                orientation: 'vertical'

                MDToolbar:
                    size_hint: (1, 0.1)
                    title: "UK tax calculator"
                    elevation: 10
                    left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]

                MDBoxLayout:
                    size_hint: (1, 0.9)
                    MDBoxLayout:
                        size_hint: (0.25, 1)
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: "Selected Trade Calculation detail:"
                            MDLabel:
                                text: app.trade_description
                            CapitalGainSummaryLabel:

                    MDBoxLayout:
                        size_hint: (0.75, 1)
                        orientation: 'vertical'
                        MDBoxLayout:
                            size_hint: (1, 0.25)
                            orientation: 'vertical'
                            TaxYearWidget:
                            ImportExportWidget:
                        TableLayout:
                            size_hint: (1, 0.75)
                            orientation: 'vertical'


    MDNavigationDrawer:
        id: nav_drawer

        ContentNavigationDrawer:
            id: content_drawer
